<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand hidden-xs hidden-sm" do %>
    <%= image_tag "logo_gege.png" %>
  <% end %>

  <!-- Logo more left on mobile only -->
  <%= link_to timeslots_path, class: "navbar-wagon-brand hidden-md hidden-lg" do %>
    <%= image_tag "logo_gege.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <% if current_user.test || current_user.admin %>
        <%= link_to "Réservations", timeslots_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Clients", clients_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Activités", activities_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

        <!-- Avatar with dropdown menu -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <i class="fa fa-bars dropdown-toggle mr- mr" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-user"></i> <%= t(".profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-cog"></i>  <%= t(".settings") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <!-- Avatar with dropdown menu -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <i class="fa fa-bars dropdown-toggle mr- mr" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-user"></i> <%= t(".profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-cog"></i>  <%= t(".settings") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "btn-third navbar-wagon-item navbar-wagon-link mr+" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle mr- mr" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Réservations", timeslots_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Activités", activities_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Clients", clients_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %></li>
        <hr class="navbar-small-bar">
        <% if user_signed_in? %>
        <li></li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".settings") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out") %>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to t(".sign_in", default: "Je teste"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

