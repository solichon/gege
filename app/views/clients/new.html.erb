<div class="row">
  <h3 class="text-center text-green mb">Je vous crée un nouveau client ?</h3>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
    <div class="row">
      <%= simple_form_for @client do |f| %>
        <%= f.error_notification %>
        <div class="col-xs-12">
          <%= f.input :first_name, required: true, label: 'Prénom' %>
          <%= f.input :last_name, required: true, label: 'Nom' %>
          <%= f.input :phone_number, required: true, label: 'Téléphone' %>
          <%= f.input :email, required: false, label: 'E-mail' %>
        </div>
        <div class="col-xs-6 mt">
          <%= f.submit "Valider", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="col-xs-6 mt">
        <!-- <div class="text-center">
          <%= link_to "Annuler", clients_path, class: "btn btn-primary btn-block" %>
        </div> -->
      </div>
     </div>
  </div>
</div>
